{
  "manifest_version": 3,
  "name": "Steam Trade History Logger",
  "version": "0.1.0",
  "description": "Logs your Steam trade/inventory history to the console for feasibility testing.",
  "permissions": [],
  "host_permissions": [
    "https://steamcommunity.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://steamcommunity.com/my/inventoryhistory/*",
        "https://steamcommunity.com/my/inventoryhistory",
        "https://steamcommunity.com/my/tradehistory/*",
        "https://steamcommunity.com/my/tradehistory",
        "https://steamcommunity.com/my/tradeoffers/*"
      ],
      "js": ["content-script.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ]
}
